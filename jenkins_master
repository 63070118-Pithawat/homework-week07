pipeline {
    agent any
    environment {
        files = readFile("data.json")
    }
    stages {
        
        stage('Welcome to master'){
            steps{
                echo 'Start Program'
                sh 'echo "my first line ${files.name}"'
                sh 'echo "my first line ${files.age}"'
                sh 'echo "my first line ${files}"'
            }
        }

        stage('Tigger the Slave Jobs') {
            steps {
                echo 'Start Trigger to send name and age to slave'
                build job: 'slave', parameters: [string(name: 'NAME', value: env.files.name), string(name: 'Ages', value: env.files.age)]
            }
        }
    }
}